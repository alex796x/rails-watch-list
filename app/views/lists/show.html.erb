
<div
  class="card-category"
  class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1536440136628-849c177e76a1?q=80&w=2650&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)"

>
  <h1><%= @list.name %></h1>
  <div class="d-flex flex-row align-items-center fs-6">
    <i class="fa-solid fa-film me-1"></i>
    <%= pluralize(@list.bookmarks.count, "movie") %>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between my-4">
    <%= link_to lists_path, class: "btn btn-outline-secondary btn-lg" do %>
      <i class="fa-solid fa-arrow-left"></i>
      Back to lists
    <% end %>

    <%= link_to new_list_bookmark_path(@list), class: "btn btn-primary btn-lg" do %>
      <i class="fa-solid fa-plus"></i>
      Add a movie
    <% end %>
  </div>

  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-3">
        <%= render bookmark %>
      </div>
    <% end %>
  </div>

  <% if @list.bookmarks.empty? %>
    <div class="alert alert-warning text-center mt-5">
      <p>No movies in this list yet.</p>
      <%= link_to new_list_bookmark_path(@list) do %>
        Add your first movie
      <% end %>
    </div>
  <% end %>
</div>
